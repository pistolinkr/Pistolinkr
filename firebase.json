{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      ".git/**",
      ".github/**",
      "src/**",
      "api/**",
      "scripts/**",
      "*.md",
      "package.json",
      "package-lock.json",
      "vercel.json",
      ".env",
      ".env.local",
      "test-*.html",
      "debug-settings.html"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
