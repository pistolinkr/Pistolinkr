# 🔐 Environment Variables Example
# 이 파일을 .env.local로 복사하고 실제 값으로 교체하세요

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
FIREBASE_APP_ID=your_app_id_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# Vercel Configuration
EDGE_CONFIG_ID=your_edge_config_id_here
VERCEL_EDGE_CONFIG=your_edge_config_here

# Vercel Postgres Configuration (선택사항)
POSTGRES_URL=postgres://username:password@host:port/database
POSTGRES_USER=your_postgres_username
POSTGRES_HOST=your_postgres_host
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DATABASE=your_database_name
POSTGRES_URL_NON_POOLING=postgres://username:password@host:5432/database
POSTGRES_PRISMA_URL=postgres://username:password@host:6543/database?sslmode=require&pgbouncer=true

# Authentication Passwords (서버 사이드에서만 사용)
ADMIN_PASSWORD=your_admin_password_here
USER_PASSWORD=your_user_password_here

# EmailJS Configuration
EMAILJS_PUBLIC_KEY=your_emailjs_public_key_here
EMAILJS_PRIVATE_KEY=your_emailjs_private_key_here
EMAILJS_SERVICE_ID=your_emailjs_service_id_here
EMAILJS_TEMPLATE_ID=your_emailjs_template_id_here

# 🔒 보안 주의사항:
# 1. 이 파일을 .env.local로 복사하세요
# 2. 실제 값으로 모든 placeholder를 교체하세요
# 3. .env.local 파일은 절대 Git에 커밋하지 마세요
# 4. API 키는 정기적으로 로테이션하세요 